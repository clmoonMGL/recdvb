DESTDIR =
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
CC = @CC@

TARGET = recdvb
TARGET2 = recdvbctl
TARGET3 = recdvbchksig
TARGETS = $(TARGET) $(TARGET2) $(TARGET3)
RELEASE_VERSION = "1.3.2"

CFLAGS   = -std=gnu11 -O2 -g -pthread -Wall -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64

LIBS     = @LIBS@
LIBS2    = -lm
LIBS3    = -lpthread -lm
LDFLAGS  =

OBJS  = recdvb.o decoder.o mkpath.o time.o tssplitter_lite.o recdvbcore.o
OBJS2 = recdvbctl.o recdvbcore.o time.o
OBJS3 = checksignal.o recdvbcore.o time.o
OBJALL = $(OBJS) $(OBJS2) $(OBJS3)
DEPEND = .deps

all: $(TARGETS)

clean:
	rm -f $(OBJALL) $(TARGETS) $(DEPEND) version.h

distclean: clean
	rm -f Makefile config.h config.log config.status

maintainer-clean: distclean
	rm -fr configure config.h.in aclocal.m4 autom4te.cache *~

$(TARGET): $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

$(TARGET2): $(OBJS2)
	$(CC) $(LDFLAGS) -o $@ $(OBJS2) $(LIBS2)

$(TARGET3): $(OBJS3)
	$(CC) $(LDFLAGS) -o $@ $(OBJS3) $(LIBS3)

$(DEPEND): version.h
	$(CC) -MM $(OBJS:.o=.c) $(OBJS2:.o=.c) > $@

version.h:
	revh=`hg parents --template 'const char *version = "r{rev}:{node|short} ({date|shortdate})";\n' 2>/dev/null`; \
	if [ -n "$$revh" ] ; then \
		echo "$$revh" > $@; \
	else \
		echo "const char *version = \"$(RELEASE_VERSION)\";" > $@; \
	fi

install: $(TARGET)
	install -m 755 $(TARGETS) $(DESTDIR)$(bindir)

-include .deps
