DESTDIR =
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
CC = @CC@

TARGET = recdvb
RELEASE_VERSION = "1.3.3"

CFLAGS   = -std=c99 -O2 -g -pthread -Wall -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -D_GNU_SOURCE
ifeq ($(CC), clang)
	CFLAGS += -Weverything
endif

LIBS     = @LIBS@
LDFLAGS  =

OBJS  = recdvb.o decoder.o mkpath.o time.o recdvbcore.o queue.o reader.o preset.o
DEPEND = .deps

all: $(TARGET)

clean:
	rm -f $(OBJS) $(TARGET) $(DEPEND) version.h

distclean: clean
	rm -f Makefile config.h config.log config.status

maintainer-clean: distclean
	rm -fr configure config.h.in aclocal.m4 autom4te.cache *~

$(TARGET): $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

$(DEPEND): version.h
	$(CC) -MM $(OBJS:.o=.c) > $@

version.h:
	echo "static const char *version = \"$(RELEASE_VERSION)\";" > $@

install: $(TARGET)
	install -m 755 $(TARGET) $(DESTDIR)$(bindir)

-include .deps
